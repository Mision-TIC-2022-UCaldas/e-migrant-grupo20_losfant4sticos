@page
@model emigrant.App.Presentacion.Pages.EntidadCol.CrearEntidadModel;
@{
    int entidadId = Model.Entidad.Id;
}

<h2>Datos Entidades @Model.Entidad.Nit @Model.Entidad.Name</h2>
<form method="post" >
    <input type="hidden" asp-for="Entidad.Id" />
    <div class="form-group row">
        <label asp-for="Entidad.Nit"></label>
        <input asp-for="Entidad.Nit" class="form-control">
        <span class="text-danger" asp-validation-for="Entidad.Nit"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Entidad.Name"></label>
        <input asp-for="Entidad.Name" class="form-control">
        <span class="text-danger" asp-validation-for="Entidad.Name"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Entidad.Direccion"></label>
        <input asp-for="Entidad.Direccion" class="form-control">
        <span class="text-danger" asp-validation-for="Entidad.Direccion"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Entidad.Telefono"></label>
        <input asp-for="Entidad.Telefono" class="form-control">
        <span class="text-danger" asp-validation-for="Entidad.Telefono"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Entidad.Ciudad"></label>
        <select class="form-select" name="Entidad.Ciudad">
            <option selected  value=0>Seleccion Ciudad</option>
        </select>
        <span class="text-danger" asp-validation-for="Entidad.Ciudad"></span>
    </div> 
    <div class="form-group row">
        <label asp-for="Entidad.Departamento"></label>
        <select class="form-select" name="Entidad.Departamento">
            <option selected  value=0>Seleccion Ciudad</option>
        </select>
        <span class="text-danger" asp-validation-for="Entidad.Departamento"></span>
    </div> 
    <div class="form-group row">
        <label asp-for="Entidad.Pais"></label>
        <select class="form-select" name="Entidad.Pais">
            <option selected  value=0>Seleccion Ciudad</option>
        </select>
        <span class="text-danger" asp-validation-for="Entidad.Pais"></span>
    </div> 


    <div class="form-group row"></div>
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-page="./ListEntidad" class="btn-default">Regresar</a>
    </div>
</form>

