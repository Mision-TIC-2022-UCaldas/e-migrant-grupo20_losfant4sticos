@page
@model emigrant.App.FrontEnd.Pages.Migrantes.MigranteFormTablas
@{
}

<div id="mainContainer">

    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <form class="d-flex" method="post">
                <input class="form-control me-2" type="text" placeholder="Search" aria-label="Search" name="migranteBuscar">
                <button class="btn btn-primary " type="submit" asp-page-handler="Buscar">Buscar</button>
            </form>
        </div>
    </nav>
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Direccion</th>
                <th>Indentificacion</th>
                <th>Telefono</th>
                <th>Situacion Laboral</th>
                <th>Detalle</th>
                <th>Actualizar</th>
                <th>Borrar</th>

            </tr>
        </thead>
        @if (Model.Migrantes != null)
        {
            foreach (var propietario in Model.Migrantes)

            {
                <tr>
                    <td>@propietario.Nombre</td>
                    <td>@propietario.Apellidos</td>

                    <td>@propietario.DireccionActual</td>
                    <td>@propietario.NumeroDocumento</td>
                    <td>
                        @propietario.NumeroTelefono
                    </td>
                    <td>@propietario.SituacionLaboral</td>
                    <td>

                        <a class="btn btn-primary table-btn" asp-page="Details" asp-route-PropietarioId="@propietario.MigranteId">
                            <i class="fas fa-info-circle fa-lg"></i>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-primary table-btn" asp-page="Edit" asp-route-PropietarioId="@propietario.MigranteId">
                            <i class="fal fa-address-card"></i>
                        </a>
                    </td>
                    <td>
                        <form method="post">
                            <input type="submit" class="btn btn-primary btn-lg" value="Borrar" asp-page-handler="Delete" asp-route-PropietarioId="@propietario.MigranteId">
                        </form>
                    </td>

                </tr>
            }
        }
    </table>
</div>